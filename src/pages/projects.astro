---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import courses from "../data/courses.json";
---

<BaseLayout title="Курси" sideBarActiveItemID="projects">
  {courses.map((course) => {
    return (
      <section class="mb-10">
        <div class="text-3xl w-full font-bold mb-5">{course.category}</div>

        {course.items.map((item, idx) => {
          return (
            <div>
              <HorizontalCard
                title={item.title}
                img={item.img}
                desc={item.desc}
                url={item.url}
                badge={item.badge}
              />
              {idx < course.items.length - 1 ? <div class="divider my-0"></div> : null}
            </div>
          );
        })}
      </section>
    );
  })}
</BaseLayout>
